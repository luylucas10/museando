@model Museando.Web.Models.Imagem

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Imagem</h4>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" asp-controller="Imagem" enctype="multipart/form-data" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="PecaId" class="control-label"></label>
				<select asp-for="PecaId" class="form-control" asp-items="ViewBag.PecaId">
					<option value="">-- Selecione --</option>
				</select>
			</div>
			<div class="form-group">
				<label for="files" class="control-label">Imagens</label>
				<input name="files" class="form-control" type="file" accept="image/*" placeholder="-- selecione --"/>
			</div>
			<div class="form-group">
				<button type="submit" value="Create" class="btn btn-primary">Create</button>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
